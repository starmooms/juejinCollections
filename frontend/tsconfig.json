{
  "allowJs": true,
  "include": [
    "./src/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "types": [
      "vite/client"
    ],
    "jsx": "preserve",
    "module": "esNext",
    "moduleResolution": "node",
    "target": "esNext",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "isolatedModules": true
  }
}